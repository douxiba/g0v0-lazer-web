---
const { label = "", message = "", labelClass = "", messageClass = "" } = Astro.props;
---

<div class="inline-flex h-6.5 relative text-white text-xs font-sans rounded-md overflow-hidden leading-none">
	<!-- 左侧 label -->
	<div class:list={["flex items-center text-sm px-2 items-center", labelClass]}>
		<slot name="logo" />
		{label}
	</div>

	<!-- 右侧 message -->
	<div class:list={["flex items-center text-sm px-2 items-center", messageClass]}>
		{message}
	</div>

	<div class="absolute top-0 left-0 w-full h-full shadow-[inset_0_-1.5px_4px_0_rgba(0,0,0,0.25)]"></div>
</div>
